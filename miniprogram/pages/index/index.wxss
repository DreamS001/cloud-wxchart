page{
  background: #FAEBD7;
}
.top_box{
  width: 100%;
  height: 80rpx;
  display: flex;
  background: #ffffff;
  padding: 0 24rpx;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
}
.position_box{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  width: 30%;
  
}
.position_box span{
  font-size: 28rpx;
  color:#333333;
  margin-left: 10rpx;
}
.tab_bar{
  width: 40%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.tab_bar .tab_item{
  font-size: 30rpx;
  color: #333333;
  position: relative;
}
.tab_bar .tab_item.tActive{
  color: #3fd6c7;
  
}
.tab_bar .tab_item.tActive::after{
  content: '';
  width: 100%;
  height: 4rpx;
  /* border-bottom: 4rpx solid #3fd6c7; */
  background: #3fd6c7;
  position: absolute;
  bottom: -10rpx;
  left: 0;
}


.content{
  padding-top: 80rpx;
  box-sizing: border-box;
}
.post-container{
display: flex;
flex-direction: column;
margin-top: 20rpx;
margin-bottom: 40rpx;
background-color: #fff;
border-bottom: 1px solid #ededed;
border-top: 1px solid #ededed;
padding-bottom: 5px;
}
.post-author-date{
margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
width: 60rpx;
height: 60rpx;
vertical-align: middle;
}
.post-nickname{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-date{
margin-left: 20rpx;
vertical-align: middle;
margin-bottom: 5px;
font-size: 22rpx;
}
.post-title{
font-size: 34rpx;
font-weight: 600;
color: #333;
margin-bottom: 10px;
margin-left: 10px;
}
.imgBox{
  width: 100%;
  height: 300rpx;
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
}
.post-image{
width: 40%;
height: 100%;
margin: auto 0;
margin-bottom: 15px;
}
.post-content{
color: #666;
font-size: 28rpx;
margin-bottom: 20rpx;
margin-left: 20rpx;
letter-spacing: 2rpx;
line-height: 40rpx;
}
.post-like{
font-size: 13px;
flex-direction: row;
line-height: 16px;
margin-left: 10px;
}
.post-like-image{
width: 16px;
height: 16px;
margin-right: 8px;
vertical-align: middle;
}
.post-like-font{
vertical-align: middle;
margin-right: 20px;
}


.addBut{
  width: 80rpx;
  height: 80rpx;
  line-height: 86rpx;
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-content: center;
  background: transparent;
  border: none;
}
.addBut::after{
  border: none;
}

.addBut image{
  width: 100%;
  height: 100%;
}

